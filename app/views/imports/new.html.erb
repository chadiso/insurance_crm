<div class="card" style="width: 18rem;">
  <!--  <img class="card-img-top" src="..." alt="Card image cap">-->
  <div class="card-body">
    <h5 class="card-title">Import customers</h5>
    <%= form_for @import do |form| %>
      <div class="form-group">
        <div class="custom-file">
          <%= form.file_field :csv, class: 'custom-file-input' %>
          <label class="custom-file-label" for="import_csv">Choose file</label>
        </div>

      </div>
      <%= form.submit class: "btn btn-primary" %>
  <% end %>
  </div>
</div>


<script type="text/javascript">
    // display the filename of chosen file
    $('.custom-file input').change(function (e) {
        var files = [];
        for (var i = 0; i < $(this)[0].files.length; i++) {
            files.push($(this)[0].files[i].name);
        }
        $(this).next('.custom-file-label').html(files.join(', '));
    });
</script>
